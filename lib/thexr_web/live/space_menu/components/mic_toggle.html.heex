<div class="absolute z-50 left-8 mr-8 bottom-12">
  <button class="block p-2 bg-gray-400" phx-click={dispatch_xrs(method: "toggle_mic")}>
    <pre><%= @mic %></pre>
    <%= if @mic == "unmuted" do %>
      <.icon name="hero-microphone" class="h-10 w-10 bg-green-600" />
    <% else %>
      <.icon name="hero-microphone" class="h-10 w-10 bg-red-800" />
    <% end %>
  </button>
</div>
